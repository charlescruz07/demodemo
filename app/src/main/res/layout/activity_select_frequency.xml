<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.cruz.sportify.LoginRegistration.SelectFrequencyActivity"
    android:background="#ecf0f1">

    <ImageView
        android:layout_width="178dp"
        android:layout_height="43dp"
        android:src="@drawable/sportify_blue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="61dp"
        android:id="@+id/imageView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME FREQUENCY"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#3498db"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:onClick="onClick"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODERATE"
        android:textSize="22sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:id="@+id/moderateFreq" />

    <TextView
        android:onClick="onClick"
        android:padding="15dp"
        android:background="@drawable/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NORMAL"
        android:textSize="22sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/moderateFreq"
        android:id="@+id/normalFreq"
        app:layout_constraintHorizontal_bias="0.502"
        android:textStyle="bold"/>

    <TextView
        android:onClick="onClick"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXTREME"
        android:textSize="22sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/normalFreq"
        android:id="@+id/extremeFreq" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/curve"
        android:scaleType="fitXY"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/extremeFreq"
        android:id="@+id/imageView4"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/freqDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOR USERS WHO ARE QUITE\nACTIVE AND JUST WANT TO\nPLAY FOR FUN"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        android:layout_marginTop="75dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:background="@drawable/roundedbutton_white"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="NEXT"
        android:textColor="#3498db"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/freqDesc"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
